<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <title>Saved Books</title>
</head>
<body>
  <%- include('../partials/header.ejs') %>
    <main>
      <h1>Saved Books</h1>
        <ul>
            <% books.forEach( book => { %>
            <li id="card">
              <img height="270px" width="200px" src=" <%= book.image_url %>" alt="">
              <h3>
                <%= book.title %>
              </h3> 
              <p>
                <%= book.author %>
              </p> 
              <p>
                <%= book.isbn %>
              </p>
              <p>
                <%= book._description %>
              </p>
              <p> Saved Bookshelf
                <%= book.bookshelf %>
              </p>
              <p>
                $<%= book.amount %>
              </p>
              <form action="/delete/<%= book.id %>" name="" method="POST">
              <input type="hidden" name="id" value="<%= book.id %>">
              <button>Delete Book</button>
              </form>
              
              <form action="/update/<%= book.id %>" name="" method="POST">
              <input type="hidden" name="id" value="<%= book.id %>">
              <input type="hidden" name="author" value="<%= book.author %>">
              <input type="hidden" name="title" value="<%= book.title %>">
              <input type="hidden" name="isbn" value="<%= book.isbn %>">
              <input type="hidden" name="image_url" value="<%= book.image_url %>">
              <input type="hidden" name="_description" value="<%= book._description %>">
              <input type="hidden" name="bookshelf" value="<%= book.bookshelf %>">
              <input type="hidden" name="amount" value="<%= book.amount %>">
              <button>Update Book</button>

              </form>
            </li>
            <% }) %>
        </ul>
    </main>
    <footer id="circles">
        <div>t</div>
        <div>e</div>
        <div>s</div>
        <div>t</div>
    </footer>
    <%- include('../partials/script.ejs') %>
</body>
</html>