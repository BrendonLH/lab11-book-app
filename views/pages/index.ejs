<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <title>Saved Books</title>
</head>
<body>
    <header>
        <nav id="navbar">
            <a href="#">Saved Books</a>
            <a href="/newsearch">Search</a>
            <a href="#">About</a>
        </nav>
    </header>
    <main>
        <ul>
            <% books.forEach( book => { %>
            <li id="card">
              <img height="270px" width="200px" src=" <%= book.image %>" alt="">
              <h3>
                <%= book.title %>
              </h3> 
              <p>
                <%= book.author %>
              </p> 
              <p>
                <%= book.description %>
              </p>
              <p>
                $<%= book.amount %>
              </p>
              <button id="deleteBook">Delete Book</button>
            </li>
            <% }) %>
        </ul>
    </main>
    <footer id="circles">
        <div>t</div>
        <div>e</div>
        <div>s</div>
        <div>t</div>
    </footer>
    <%- include('../partials/script.ejs') %>
</body>
</html>