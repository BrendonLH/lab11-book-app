<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <title>Saved Books</title>
</head>
<body>
  <%- include('../partials/header.ejs') %>
    <main>
      <h1>Saved Books</h1>
        <ul>
            <% books.forEach( book => { %>
            <li id="card">
              <img height="270px" width="200px" src=" <%= book.image_url %>" alt="">
              <h3>
                <%= book.title %>
              </h3> 
              <p>
                <%= book.author %>
              </p> 
              <p>
                <%= book._description %>
              </p>
              <p>
                $<%= book.amount %>
              </p>
              <form action="delete" method="POST">
              <button id="deleteBook">Delete Book</button>
              </form>
            </li>
            <% }) %>
        </ul>
    </main>
    <footer id="circles">
        <div>t</div>
        <div>e</div>
        <div>s</div>
        <div>t</div>
    </footer>
    <%- include('../partials/script.ejs') %>
</body>
</html>