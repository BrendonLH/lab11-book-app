<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../../partials/head.ejs') %>

    <title>Find Book</title>
</head>
<body>  
     <%- include('../../partials/header.ejs') %>
    <main>
        <div id="headerIcon">
          <h1>Best Books!</h1>
           
          </div>
        <div id="titleFoot">
          <h3>Search by Title or Author</h3>
        </div>
        <form action="/search" method="POST">
            <div>
                <input id="searchInput" type="text" name='search' placeholder="Enter Title or Author">
            </div>
            <div id="radios">
                <label>
                    Title
                    <input id="title" type='radio' name='searchby' value='intitle'>
                </label>
                <label>
                    Author
                    <input id="author" type='radio' name='searchby' value='inauthor'>
                </label>
            </div>
            <button type="submit">Search The Google Books API</button>

        </form>
    </main>
    <footer id="circles">
        <div>t</div>
        <div>e</div>
        <div>s</div>
        <div>t</div>
    </footer>
    <%- include('../../partials/script.ejs') %>
</body>
</html>